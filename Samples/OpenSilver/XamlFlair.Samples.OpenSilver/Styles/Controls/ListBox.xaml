<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:xfc="clr-namespace:XamlFlair.Controls;assembly=XamlFlair.WPF">

	<Style x:Key="DefaultListBoxStyle"
		   TargetType="xfc:AnimatedListBox">
		<Setter Property="Background"
				Value="Transparent" />
		<Setter Property="BorderBrush"
				Value="Transparent" />
		<Setter Property="ItemContainerStyle"
				Value="{StaticResource DefaultListBoxItemStyle}" />
		<Setter Property="VirtualizingStackPanel.VirtualizationMode"
				Value="Recycling" />
		<Setter Property="ScrollViewer.CanContentScroll"
				Value="True" />
	</Style>

	<Style TargetType="xfc:AnimatedListBox"
           BasedOn="{StaticResource DefaultListBoxStyle}" />

</ResourceDictionary>